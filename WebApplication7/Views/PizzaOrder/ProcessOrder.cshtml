@model WebApplication7.Models.Product[]

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ordered Products</title>
    <style>
        body {
            background-color: #2c3e50; /* Midnight Blue */
            text-align: center;
            padding: 50px;
            font-family: Arial, sans-serif;
            color: #ecf0f1; /* Clouds */
        }

        h1 {
            font-size: 2em;
            margin-bottom: 20px;
            color: #e74c3c; /* Alizarin Crimson */
        }

        .product {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 20px;
            text-align: left;
            background-color: #34495e; /* Wet Asphalt */
        }

        .product p {
            font-size: 1.5em;
            margin-bottom: 10px;
            color: #ecf0f1; /* Clouds */
        }
    </style>
</head>
<body>
    <h1>Ordered Products</h1>
    @foreach (var product in Model)
    {
            <div class="product">
                <p>Name: @product.Name</p>
                <p>Price: @product.Price</p>
                <p>Quantity: @product.Quantity</p>
            </div>
    }
</body>
</html>

