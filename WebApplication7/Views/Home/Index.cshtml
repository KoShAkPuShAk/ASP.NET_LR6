@page
@model WebApplication7.Views.Home.IndexModel 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizza Ordering System</title>
    <style>
        body {
            background-color: #2c3e50; /* Midnight Blue */
            text-align: center;
            padding: 50px;
            font-family: Arial, sans-serif;
            color: #ecf0f1; /* Clouds */
        }

        h1 {
            font-size: 2em;
            margin-bottom: 20px;
            color: #e74c3c; /* Alizarin Crimson */
        }

        p {
            font-size: 1.5em;
            margin-bottom: 20px;
            color: #95a5a6; /* Concrete */
        }

        .button-frame {
            display: inline-block;
            border: 2px solid #3498db; /* Belize Hole */
            padding: 10px;
            border-radius: 5px;
            margin-top: 20px;
        }

        a {
            font-size: 1.5em;
            color: #3498db; /* Belize Hole */
            text-decoration: none;
            transition: color 0.3s ease-in-out;
        }

        a:hover {
            color: #2ecc71; /* Emerald on Hover */
        }
    </style>
</head>
<body>
    <h1>Welcome to Pizza Hat!</h1>
    <p>Lets start to take order</p>
    <div class="button-frame">
        <a href="/PizzaOrder/Register">Order Pizza</a>
    </div>
</body>
</html>
